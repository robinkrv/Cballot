{
  "name": "Quarkus Devcontainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--network=db_dev"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-quarkus",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven"
      ]
    }
  },
  "forwardPorts": [
    8080
  ],
  "remoteUser": "vscode",
  "postCreateCommand": "sudo chown -R vscode:vscode /workspaces/Cballot/target && ./mvnw install -DskipTests"
}